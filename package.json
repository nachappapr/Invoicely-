{
  "name": "invoice-app",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "postinstall": "prisma generate",
    "build": "prisma generate && remix build",
    "icons": "npx @svgr/cli --out-dir app/assets/icons -- app/assets",
    "icons:watch": "npm-watch icons",
    "dev:svg": "run-s icons icons:watch",
    "dev:remix": "remix dev --manual",
    "dev": "run-p dev:*",
    "start": "remix-serve ./build/index.js",
    "typecheck": "tsc"
  },
  "watch": {
    "icons": {
      "patterns": [
        "icons"
      ],
      "extensions": "svg",
      "quiet": false
    }
  },
  "dependencies": {
    "@conform-to/react": "^0.9.1",
    "@conform-to/zod": "^0.9.1",
    "@prisma/client": "^5.11.0",
    "@remix-run/css-bundle": "^2.3.0",
    "@remix-run/node": "^2.3.0",
    "@remix-run/react": "^2.3.0",
    "@remix-run/serve": "^2.3.0",
    "chalk": "^5.3.0",
    "clsx": "^2.1.0",
    "cookie": "^0.6.0",
    "crypto-js": "^4.2.0",
    "date-fns": "^3.3.1",
    "faker": "^6.6.6",
    "framer-motion": "^10.18.0",
    "isbot": "^3.6.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-utils": "^7.5.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@remix-run/dev": "^2.3.0",
    "@remix-run/eslint-config": "^2.3.0",
    "@svgr/cli": "^8.1.0",
    "@svgr/plugin-jsx": "^8.1.0",
    "@svgr/plugin-prettier": "^8.1.0",
    "@svgr/plugin-svgo": "^8.1.0",
    "@types/faker": "^6.6.9",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "autoprefixer": "^10.4.16",
    "enforce-unique": "^1.3.0",
    "eslint": "^8.38.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.11.0",
    "postcss": "^8.4.31",
    "prisma": "^5.11.0",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "prisma": {
    "seed": "npx tsx prisma/seed.ts"
  }
}
